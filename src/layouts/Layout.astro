---
import Head from '../components/layouts/Head.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<Head title={title} favicon="/src/assets/refresh-negative.svg"/>
	<body>
		<header>
			<h1>{title}</h1>
		</header>
		<slot />
		<footer>
			<a href="https://www.embracket.com"><p>Made by Embracket</p><img src="/src/assets/embracketlogo.svg"></a>
			<a href="https://www.github.com/mikael-ros/slumper"><p>GitHub</p><img src="/src/assets/github-mark-white.svg"></a>
			<a href="https://www.github.com/mikael-ros/slumper"><p>Donate</p><img src="/src/assets/altdonate.svg"></a>
			<a href="https://www.github.com/mikael-ros/slumper"><p>Share</p><img src="/src/assets/share.svg"></a>
		</footer>
	</body>
</html>
